{
  "name": "remark-generic-extensions",
  "version": "1.4.0",
  "description": "!Extension\\[Content\\]\\(Argument\\)\\{Properties\\} -> :tada: â€” [commonmark generic directive extension](https://github.com/jgm/CommonMark/wiki/Generic-Directive-Extension-List) for remark",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "commonmark",
    "html",
    "react"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "browser": {
    "joi": "joi-browser",
    "lib/index.js": "lib/browser.min.js"
  },
  "scripts": {
    "build": "run-s build:clean build:server build:browser",
    "build:clean": "del lib; mkdirp lib",
    "build:server": "babel --ignore src/**/__tests__/**/*.js,src/**/__tests__/**/*.jsx -d ./lib ./src",
    "build:browser": "run-s build:browserify build:mangle",
    "build:browserify": "browserify ./src/index.js --bare -t babelify -s remarkGenericExtensions -o ./lib/browser.js",
    "build:mangle": "esmangle -o ./lib/browser.min.js ./lib/browser.js",
    "watch": "babel -w  --ignore src/**/__tests__/**/*.js,src/**/__tests__/**/*.jsx -d ./lib ./src",
    "prepare": "yarn build",
    "lint": "eslint --fix ./src",
    "pretest": "yarn lint",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/remark-generic-extensions.git"
  },
  "author": "Mehdi Lahlou <mehdi.lahlou@free.fr>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/medfreeman/remark-generic-extensions/issues"
  },
  "homepage": "https://github.com/medfreeman/remark-generic-extensions#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babelify": "^10.0.0",
    "browserify": "^16.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.5",
    "del-cli": "^1.1.0",
    "eslint": "^5.0.1",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "esmangle": "^1.0.1",
    "git-exec-and-restage": "^1.0.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.0.4",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.7.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.1",
    "react-test-renderer": "^16.6.1",
    "remark": "^10.0.0",
    "remark-html": "^9.0.0",
    "remark-react": "^5.0.1",
    "sinon": "^7.2.2",
    "vfile-reporter": "^5.0.0",
    "vue": "^2.5.17",
    "vue-jest": "^3.0.0",
    "vue-server-renderer": "^2.5.17",
    "vue-template-compiler": "^2.5.17"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "deepmerge": "^3.0.0",
    "joi": "13.4.0",
    "joi-browser": "13.4.0"
  },
  "lint-staged": {
    "*.js": [
      "git-exec-and-restage prettier --write --"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-react"
        ],
        "plugins": [
          "@babel/plugin-proposal-object-rest-spread",
          [
            "@babel/plugin-transform-runtime",
            {
              "corejs": false,
              "helpers": false,
              "regenerator": true,
              "useESModules": false
            }
          ]
        ],
        "sourceMaps": "both"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "plugins": [
      "babel",
      "jest"
    ],
    "extends": [
      "eslint-config-i-am-meticulous",
      "plugin:jest/recommended",
      "eslint-config-prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "globals": {
      "jest/globals": true,
      "jasmine": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "parser": "babylon"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
