{
  "name": "remark-generic-extensions",
  "version": "1.2.0",
  "description": "!Extension\\[Content\\]\\(Argument\\)\\{Properties\\} -> :tada: â€” [commonmark generic directive extension](https://github.com/jgm/CommonMark/wiki/Generic-Directive-Extension-List) for remark",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "commonmark",
    "html",
    "react"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "browser": {
    "joi": "joi-browser",
    "lib/index.js": "lib/browser.min.js"
  },
  "scripts": {
    "build": "yarn build-server && yarn build-browser",
    "build-server": "babel --ignore /__tests__/ -d ./lib ./src",
    "watch": "babel -w  --ignore /__tests__/ -d ./lib ./src",
    "build-browser": "yarn build-browserify && yarn build-mangle",
    "build-browserify": "browserify ./src/index.js --bare -t babelify -s remarkGenericExtensions > ./lib/browser.js",
    "build-mangle": "esmangle ./lib/browser.js > ./lib/browser.min.js",
    "prepublish": "yarn build",
    "lint": "eslint --fix ./src",
    "pretest": "yarn lint",
    "test": "cross-env NODE_ENV=test ava",
    "test-with-coverage": "cross-env NODE_ENV=test nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medfreeman/remark-generic-extensions.git"
  },
  "author": "Mehdi Lahlou <mehdi.lahlou@free.fr>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/medfreeman/remark-generic-extensions/issues"
  },
  "homepage": "https://github.com/medfreeman/remark-generic-extensions#readme",
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.6.1",
    "eslint-config-i-am-meticulous": "^7.0.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.2.1",
    "react": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "remark": "^8.0.0",
    "remark-html": "^6.0.1",
    "remark-react": "^4.0.0",
    "sinon": "^3.2.1",
    "vfile-reporter": "^4.0.0"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "joi": "^10.6.0",
    "joi-browser": "^10.6.1"
  },
  "babel": {
    "presets": [
      "babel-preset-env",
      "babel-preset-stage-2"
    ],
    "plugins": [
      "add-module-exports",
      "transform-function-bind"
    ],
    "env": {
      "test": {
        "presets": [
          "babel-preset-env",
          "babel-preset-stage-2",
          "babel-preset-react"
        ],
        "plugins": [
          "istanbul",
          "transform-function-bind"
        ],
        "sourceMaps": "inline"
      }
    },
    "ignore": [
      "node_modules/*"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "babel"
    ],
    "extends": [
      "eslint-config-i-am-meticulous"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "globals": {
      "Promise": true
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "max-len": [
        "error",
        80
      ],
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ],
          "moduleDirectory": [
            "node_modules"
          ]
        }
      }
    }
  }
}
